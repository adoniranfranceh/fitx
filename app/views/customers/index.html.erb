<h1>Clientes</h1>
<div class="float-end"><%= link_to 'Adicionar novo', new_customer_path, class: 'btn btn-success' %></div>
<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col-1">Id</th>
        <th scope="col-10">Nome</th>
        <th class="col-1"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>   
      <tr>
        <th scope="row"><%= customer.id %></th>
        <td><%= customer.name %></td>
        <td><%= link_to customer_path(customer), class: "btn btn-style " do  %>
              <i class="bi bi-eye-fill"></i>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
